<Window x:Class="AsyncDBApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncDBApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="220" Width="500">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="96*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="UserIcon" HorizontalAlignment="Left" Height="95" Margin="26,57,0,0" VerticalAlignment="Top" Width="90" OpacityMask="Black"/>
        <TextBox x:Name="FirstName" IsReadOnly="True" HorizontalAlignment="Left" Height="20" Margin="147,12,0,0" TextWrapping="Wrap" Text="First Name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="LastName" IsReadOnly="True" HorizontalAlignment="Left" Height="20" Margin="147,47,0,0" TextWrapping="Wrap" Text="Last Name" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="AcctNo" IsReadOnly="True" HorizontalAlignment="Left" Height="20" Margin="147,86,0,0" TextWrapping="Wrap" Text="Account Number" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Pin" IsReadOnly="True" HorizontalAlignment="Left" Height="20" Margin="147,123,0,0" TextWrapping="Wrap" Text="Pin" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="Balance" IsReadOnly="True" HorizontalAlignment="Left" Height="20" Margin="147,158,0,0" TextWrapping="Wrap" Text="Balance" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="NoItems" Content="Index" HorizontalAlignment="Left" Margin="32,107,0,0" VerticalAlignment="Top" Grid.Column="1"/>

        <TextBox x:Name="IndexBox" HorizontalAlignment="Left" Height="20" Margin="32,133,0,0" TextWrapping="Wrap" Text="Index" VerticalAlignment="Top" Width="86" Grid.Column="1"/>
        <Button x:Name="IndexButton" Content="Find" HorizontalAlignment="Left" Height="20" Margin="126,133,0,0" VerticalAlignment="Top" Width="69" Click="IndexButton_OnClick" Grid.Column="1"/>

        <TextBox x:Name="SearchBox" HorizontalAlignment="Left" Height="20" Margin="32,57,0,0" TextWrapping="Wrap" Text="Search" VerticalAlignment="Top" Width="86" Grid.Column="1"/>
        <Button x:Name="SearchButton" Content="Search" HorizontalAlignment="Left" Height="20" Margin="126,57,0,0" VerticalAlignment="Top" Width="69" Click="SearchButton_Click" RenderTransformOrigin="0.385,-0.821" Grid.Column="1"/>

        <ProgressBar x:Name ="progressBar" Grid.Column="1" HorizontalAlignment="Left" Height="10" Margin="66,168,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="NoItems_Copy" Content="Last Name" HorizontalAlignment="Left" Margin="33,31,0,0" VerticalAlignment="Top" Grid.Column="1"/>
    </Grid>
</Window>
